# Application
NODE_ENV=development
PORT=3000
APP_NAME=ServerHubX
APP_URL=http://localhost:3000

# Database (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=serverhubx
DB_PASSWORD=your_secure_password
DB_DATABASE=serverhubx
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# SMTP (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Firebase (FCM)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# WhatsApp (Meta Business API)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# Logging
LOG_LEVEL=debug
LOG_DIR=/var/log/serverhubx

# System Paths (auto-detected, override if needed)
# APACHE_CONFIG_PATH=/etc/apache2
# PHP_FPM_CONFIG_PATH=/etc/php
# BIND9_CONFIG_PATH=/etc/bind
# POSTFIX_CONFIG_PATH=/etc/postfix
